var findDigit = function(num, nth){
num = Math.abs(num);
  if(nth<=0) {
    return -1;
  } 
  num = (num + "").split('').reverse();
    if(num.length>=nth) {
      return +num[nth-1];
    }  else {
        return 0;
      }  
}
