function infected(s) {
 const ss = s.split('X');
    const total = ss.reduce((acc, c) => acc + c.length, 0);
    const z = ss.filter(el => el.includes('1'));
    const x = z.map(el => el.length.toString().padStart(el.length, '1'));
    const xx = x.reduce((acc, k) => acc + k.length, 0);
    return total > 0 ? (xx * 100) / total : 0;
}
