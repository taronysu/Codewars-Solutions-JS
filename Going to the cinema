https://www.codewars.com/kata/562f91ff6a8b77dfe900006e/train/javascript

function movie(card, ticket, perc) {
    let sumA = 0;
    let sumB = card;
    let ticketB = ticket;
    let days = 0;
    while(sumA <= Math.ceil(sumB)) {
        sumA += ticket;
        ticketB *= perc;
        sumB += ticketB;
        days++;
    }
  return days;  
}
