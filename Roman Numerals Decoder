https://www.codewars.com/kata/51b6249c4612257ac0000005/train/javascript

function solution (roman) {
  const r = {'I': 1, 'V': 5, 'X': 10, 'L': 50, 'C': 100, 'D': 500, 'M': 1000};
    const s = roman.split('').map(el => r[el]);
    let value = 0;
    let curr = 0;
    for (let v of s.reverse()) {
        value += v >= curr ? v : -v;
        curr = v;
    }
    return value;
}
