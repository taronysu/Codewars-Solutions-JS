function heggeleggleggo(word){
  let a = '';
  let vowels = [' ', "a", "e", "i", "o", "u",'A','O','U','I','E'];

  for(let v of word){
    if(vowels.includes(v))
           { a += v;}
        else  {a = a + v + 'egg';
  }
}
    return a;
  }
  
// Another Solution

function heggeleggleggo(word){
  return word.replace(/[bcdfghjklmnpqrstvwxyz]/gi, l => l + 'egg');
}
