function isOpposite(s1,s2){
   let s = '';
  if(s1.length != s2.length || s1.length == 0 || s2.length == 0) return false;
  for(let i = 0; i < s1.length; i++){
    s1[i] === s1[i].toUpperCase() ? s += s1[i].toLowerCase() : s += s1[i].toUpperCase(); 
  }
  return s === s2;
}
