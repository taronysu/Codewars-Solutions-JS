https://www.codewars.com/kata/520b9d2ad5c005041100000f/train/javascript

function pigIt(text){
 const words = text.split(' ');
    const res = [];
    for (let w of words) {
        if (/^[a-zA-Z]+$/.test(w)) {
            if (w.length > 1) {
                res.push(w.slice(1) + w[0] + 'ay');
            } else {
                res.push(w + 'ay');
            }
        } else {
            res.push(w);
        }
    }
    return res.join(' ');
}
