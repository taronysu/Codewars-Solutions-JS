function roundIt(n){
  let s = String(n).split(".");
  if (s[0].length > s[1].length) {
     return Math.floor(n);
  } else if (s[0].length < s[1].length) {
    return Math.ceil(n);
    } else {
    return Math.round(n);
    }
}
