https://www.codewars.com/kata/52b757663a95b11b3d00062d/train/javascript

function toWeirdCase(string){
let i = 0;
    let result = '';
    for (let c of string) {
        if (i % 2 === 0) {
            result += c.toUpperCase();
        } else {
            result += c.toLowerCase();
        }

        if (c === ' ') {
            i = 0;
        } else {
            i++;
        }
    }
    return result;
}
