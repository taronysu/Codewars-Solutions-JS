function growingPlant(upSpeed, downSpeed, desiredHeight) {
 let day = 0
   let  h = 0
    while (h <= desiredHeight) {
        h += upSpeed
        day += 1
        if (h <  desiredHeight)
           { h -= downSpeed
         } else {
            return day  
           }
      }  
}
