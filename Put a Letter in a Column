function buildRowText(index, character) {
 const arr=[];
  for (let i=0;i<=8;i++){
  if (i===index){
  arr.push(`|${character}`)
  } else {
  arr.push('|')}
  }
  arr.push('|')
  return  arr.join(' ').replace(/\w\s/g,`${character}`)
}
