function neutralise(a, b) {
  let res = ''
  for(let i = 0; i< a.length; i++) {
    if(a[i] == "+" && b[i] == "+") {
      res += '+'
    }
    if(a[i] == "+" && b[i] == "-") {
      res += '0'
    }
    if(a[i] == "-" && b[i] == "+") {
      res += '0'
    }
    if(a[i] == "-" && b[i] == "-") {
      res += '-'
    }
  }
